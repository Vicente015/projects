<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <style>
      main {
        max-width: 38rem;
        padding: 2rem;
        margin: auto;
      }

      html {
        max-width: 70ch;
        padding: 3em 1em;
        margin: auto;
        line-height: 1.75;
        font-size: 1.25em;
      }

      h1,h2,h3,h4,h5,h6 {
        margin: 3em 0 1em;
      }

      p,ul,ol {
        margin-bottom: 2em;
        color: #1d1d1d;
        font-family: sans-serif;
      }
    </style>
  </head>

  <body>
    <main>
      <h2>{{ title }}</h2>
      {{ content | safe }}
    </main>
  </body>
</html>
